            controls.updateTextareaSelection area, sE, sE
            controls.insertIntoTextarea area, ":#{value}: "
            controls.updateTextareaSelection area, (if sS == sE then sE + 3 + value.length else sS), sE + 3 + value.length
        dialogContent = $ '<p></p>'
